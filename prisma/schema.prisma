// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Module {
  id String @id @default(uuid())
  module_number Int
  module_name String
  users UserOnModule[]
}

model UserOnModule {
  module Module? @relation(fields: [module_id], references: [id])
  module_id String?
  user User? @relation(fields: [user_id], references: [id])
  user_id String?
  id Int @id @default(autoincrement())
}

model User {
  id String @id @default(uuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  firstname String
  lastname String
  email String @unique
  auth String
  modules UserOnModule[]
  dashboard Dashboard?
  password Password[]
  note Note[]
}

model Dashboard {
  id String @unique
  user User @relation(fields: [id], references: [id])
  field1 Int?
  field2 Int?
  field3 Int?
}


//module storage
model Password {
  id Int @id @default(autoincrement())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  name String
  email String?
  username String?
  telephone String?
  description String?
  password String?
  user User? @relation(fields: [user_id], references: [id])
  user_id String?
}

model Note {
  id Int @id @default(autoincrement())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  name String
  description String?
  user User? @relation(fields: [user_id], references: [id])
  user_id String?
}



